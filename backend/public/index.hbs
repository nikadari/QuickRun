<html>
  <head>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAhUl9axir3grRjxVW61ZTL3I0ZgSS23_E"></script>
  </head>

  <body>
    <div id="map" style="width:100%;height:100%"></div>
  </body>

  <script>
    function initMap() {
      var directionsService = new google.maps.DirectionsService();
      var directionsRenderer = new google.maps.DirectionsRenderer({suppressMarkers: true});
      var earl132 = new google.maps.LatLng(44.228690, -76.487910);
      var mapOptions = {
        zoom: 7,
        center: earl132,
        disableDefaultUI: true
      }
      var map = new google.maps.Map(document.getElementById('map'), mapOptions);
      directionsRenderer.setMap(map);

      var start = earl132;
      var end = new google.maps.LatLng(44.232370, -76.491840);
      var request = {
        origin: start,
        destination: end,
        waypoints: [
          {
            location: new google.maps.LatLng(44.225260, -76.486190),
            stopover: true,
          }
        ],
        travelMode: 'DRIVING'
      };
      directionsService.route(request, function(result, status) {
        if (status == 'OK') {
          directionsRenderer.setDirections(result);
        }
      });
    }
    initMap();
  </script>

</html>
